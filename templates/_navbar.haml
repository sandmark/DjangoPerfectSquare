- load all_tags
- get_all_tags as tags

/ Dropdown Structure
- if user.is_authenticated
  / Modal Structure
  .modal#logout-modal
    .modal-content
      %p.center.deep-orange-text.darken-4 ログアウトしてよろしいですか？
    .modal-footer
      %form{method: "POST", action: "{% url 'account_logout' %}"}
        - csrf_token
        %button.btn.waves-effect.waves-brown{type: "submit"} はい
        %a.modal-close.btn-flat{href: "#!"} いいえ

  %ul.dropdown-content#user-dropdown-navbar
    - include "_navbar_dropdown_user.haml"

  %ul.dropdown-content#tags-dropdown-navbar
    - for tag in tags
      %li
        %a.light-blue-text{href: "{% url 'cms:tag_index' tag.id %}"}
          #{ tag.name }

%nav.brown.lighten-1{role: "navigation"}
  .nav-wrapper.container
    %a#logo-container.brand-logo{href: "{% url 'cms:index' %}"} PerfectSquare
    %ul.right.hide-on-med-and-down
      - if user.is_authenticated
        %li
          %a.dropdown-trigger{href: "#!", data-target: "tags-dropdown-navbar"}
            %i.material-icons attachment

        %li
          %a.dropdown-trigger{href: "#!", data-target: "user-dropdown-navbar"}
            %i.material-icons.left person

    / Navbar mobile
    %ul#nav-mobile.sidenav
      - if user.is_authenticated
        %ul.collapsible.collapsible-accordion
          %li
            %a.collapsible-header
              %i.material-icons.left person
              #{ user.username }
            .collapsible-body
              %ul
                - include "_navbar_dropdown_user.haml"
          %li
            %a.collapsible-header
              %i.material-icons attachment
              Tags
            .collapsible-body
              %ul
                - for tag in tags
                  %li
                    %a.light-blue-text{href: "{% url 'cms:tag_index' tag.id %}"} #{ tag.name }
    %a.sidenav-trigger{"data-target": "nav-mobile", href: "#"}
      %i.material-icons menu
